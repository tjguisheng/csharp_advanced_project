<Window x:Class="QuanProject.WindowAddCar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanProject"
        mc:Ignorable="d"
        Title="Add a Car" Height="300" Width="400">
    <StackPanel Margin="10">
        <Label>Please input car name:</Label>
        <TextBox x:Name="tbCarName" Height="35" Margin="5" BorderBrush="SkyBlue"></TextBox>
        <WrapPanel Grid.Row="6" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnCancelAddCar" Margin="0, 0, 10,0" Width="100" Height="35" Click="btnCancelAddCar_Click">Cancel</Button>
            <Button x:Name="btnSaveAddCar" Margin="10,0,0,0" Width="100" Height="35" Click="btnSaveAddCar_Click">Save</Button>
        </WrapPanel>
    </StackPanel>
</Window>
